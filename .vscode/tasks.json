{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-O3",
                "--std=c++11",
                "-fopenmp",
                "${workspaceFolder}/src/*.cpp",
                "-I",
                "${workspaceFolder}/src/",
                "-o",
                "${workspaceFolder}/jamming.o"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}